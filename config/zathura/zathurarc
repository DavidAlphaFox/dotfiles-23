set notification-fg             "#84c49b" # bright:green

set completion-bg               "#161925" # bg2
set completion-fg               "#c3c7d1" # fg
set completion-group-bg         "#161925" # bg1
set completion-group-fg         "#edabd2" # gray
set completion-highlight-bg     "#161925" # bright:blue
set completion-highlight-fg     "#93c5e6" # bg2

# Define the color in index mode
set index-bg                    "#161925" # bg2
set index-fg                    "#c3c7d1" # fg
set index-active-bg             "#a29dff" # bright:blue
set index-active-fg             "#161925" # bg2

set inputbar-bg                 "#1a1d2b" # bg
